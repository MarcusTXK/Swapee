<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <!-- Default table names -->
    <property name="table.reviews" value="reviews"/>

    <changeSet id="reviews_create_table" author="MarcusTXK">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="${table.reviews}"/>
            </not>
        </preConditions>
        <createTable tableName="${table.reviews}">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="request_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_reviews_item_id"
                             referencedTableName="${table.items}" referencedColumnNames="id"/>
            </column>
            <column name="owner_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_reviews_owner_user_id"
                             referencedTableName="${table.users}" referencedColumnNames="id"/>
            </column>
            <column name="trader_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_reviews_trader_user_id"
                             referencedTableName="${table.users}" referencedColumnNames="id"/>
            </column>
            <column name="score" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="remarks" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
